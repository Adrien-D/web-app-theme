<div class="block">
  <div class="secondary-navigation">
    <ul>
      <li class="first"><%%= link_to 'All <%= plural_model_name %>', <%= controller_routing_path %>_path  %></li>
      <li><%%= link_to 'New <%= model_name %>', new_<%= singular_controller_routing_path %>_path %></li>
      <li class="active"><%%= link_to 'Show <%= model_name %>', <%= singular_controller_routing_path %>_path %></li>
    </ul>
    <div class="clear"></div>
  </div>          
  <div class="content">
    <div class="inner">
      <% columns.each do |column| %>
        <p>
          <b><%= column.name %>:</b>
          <%%= @<%= resource_name %>.<%= column.name %> %>
        </p>
      <%- end -%>
      <%%= link_to 'Edit', edit_<%= resource_name %>_path(@<%= resource_name %>) %>
    </div>
  </div>
</div>

<%% content_for :sidebar, render(:partial => 'sidebar') -%>